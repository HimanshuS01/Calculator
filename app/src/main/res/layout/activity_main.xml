<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codingblocks.calculator.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:textAlignment="viewEnd"
        android:gravity="bottom"
        android:id="@+id/textview"
        android:text="0"
        android:textSize="60dp"
        android:background="#b4b2b2"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="-5dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_below="@id/textview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_margin="0dp"
            android:background="#bebbbb">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="68dp"
               android:orientation="horizontal"
               android:layout_marginBottom="-5dp">

               <Button
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:text="CLR"
                   android:layout_weight="1"
                   android:textSize="20dp"
                   android:id="@+id/clear"
                   android:onClick="onClick"
                   android:layout_marginRight="-5dp"
                   android:layout_marginBottom="2dp" />
               <Button
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:text="back"
                   android:textSize="20dp"
                   android:layout_weight="1"
                   android:id="@+id/back"
                   android:onClick="onClick"
                   android:layout_marginRight="-5dp"
                   android:layout_marginBottom="2dp" />
               <Button
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:text="/"
                   android:textSize="20dp"
                   android:layout_weight="1"
                   android:id="@+id/divide"
                   android:onClick="onClick"
                   android:layout_marginRight="-5dp"
                   android:layout_marginBottom="2dp" />
               <Button
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:text="X"
                   android:textSize="20dp"
                   android:layout_weight="1"
                   android:id="@+id/multiply"
                   android:onClick="onClick"
                   android:layout_marginRight="-5dp"
                   android:layout_marginBottom="2dp" />

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="7"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:id="@+id/seven"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="8"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/eight"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="9"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/nine"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="-"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/minus"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="4"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:id="@+id/four"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="5"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/five"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="6"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/six"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="+"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/plus"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="1"
                    android:textSize="20dp"
                    android:id="@+id/one"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="2"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/two"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="3"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:id="@+id/three"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="="
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/equal"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp"
                    android:background="#f85353"
                    android:layout_marginBottom="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:layout_marginTop="-8dp"
                android:layout_marginBottom="-5dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="0"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/zero"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:text="."
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:id="@+id/dot"
                    android:onClick="onClick"
                    android:layout_marginRight="-5dp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


    </LinearLayout>
